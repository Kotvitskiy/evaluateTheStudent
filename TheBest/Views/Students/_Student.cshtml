<div id="student-list">
    <div class="row" data-bind="foreach: students, afterRender: BindUIAction">
        <div class="medium-12 columns">
            <div class="profile-card">
                <div class="row">
                    <div class="small-6 medium-3 columns">
                        <img data-bind="attr: {src: ImageUrl}" src="http://zurb.com/ink/images/inky-computer.svg" alt="Inky">
                    </div>
                    <div class="small-6 medium-2 columns">
                        <div class="form-group">
                            <div class="form-control">
                                <div class="label">Ім'я</div>
                                <div class="field" data-bind="text: Name"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-control">
                                <div class="label">Група</div>
                                <div class="field" data-bind="text: Group"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-control">
                                <div class="label">Рейтинг</div>
                                <div class="field" data-bind="text:Rate"></div>
                            </div>
                        </div>
                    </div>
                    <div class="medium-7 columns raiting">
                        <div class="star">
                            <strong class="choice">Виберіть оцінку</strong>
                            <span class="star-rating">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <input data-bind="checked: Rate, click: $root.submitAppear" type="radio" name="rating" value="@i.ToString()" /><i></i>
                                }
                            </span>
                        </div>
                        
                    </div>
                    <h4 class="thanks" style="display:none">Дякуємо, ваш голос було врахованно.</h4> 
                </div>
            </div>
        </div>

    </div>
</div>
